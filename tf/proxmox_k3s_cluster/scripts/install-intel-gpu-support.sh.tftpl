cat $0

export HAS_GPU=0
%{ for pci in pci_mappings ~}
%{ if pci.primary_gpu ~}
export HAS_GPU=1
%{ endif ~}
%{ endfor ~}

if test $HAS_GPU = 1; then 
  sudo apt-get install -o DPkg::Lock::Timeout=60 -y intel-microcode linux-firmware linux-generic
  echo 'SUBSYSTEM=="drm", MODE="0666"' | sudo tee -a /etc/udev/rules.d/99-gpu-mode.rules
else
  echo "No GPU mapped - no-op"
fi

